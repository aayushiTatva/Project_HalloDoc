@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.RecordsModel
@using static HalloDocMVC.DBEntity.ViewModels.AdminPanel.Constant
@{
    var enumData = from AccountType e in Enum.GetValues(typeof(AccountType))
                   select new
                   {
                       ID = (int)e,
                       Name = e.ToString()
                   };

    var requestStatus = from RequestType e in Enum.GetValues(typeof(RequestType))
                        select new
                        {
                            ID = (int)e,
                            Name = e.ToString()
                        };

    var data = from SMSAction e in Enum.GetValues(typeof(SMSAction))
               select new
               {
                   ID = (int)e,
                   Name = e.ToString()
               };
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-6">
            <h4><strong>SMS Logs</strong></h4>
        </div>
    </div>
    <div class="row ">
        <div class="card shadow">
            <div class="card-body border-0">
                <form id="FilterForm">
                    <div class="row d-flex">
                        <div class="form-floating col-lg-2 col-md-4 col-sm-6 mb-3">
                            <select asp-for="AccountType" asp-items="@(new SelectList(enumData, "ID", "Name"))" id="accountdropdown" class="form-select shadow-none text-secondary" data-allow-clear="true">
                                <option value="-1">Search By Role</option>
                                <label class="ms-2" for=""> Search By Role</label>
                            </select>
                        </div>
                        <div class="form-floating col-lg-2 col-md-4 col-sm-6 mb-3">
                            <input asp-for="ReceiverName" type="text" class="form-control shadow-none" id="Rname" placeholder="Reciever's Name">
                            <label class="ms-2" for="Rname"> Reciever's Name</label>
                        </div>
                        <div class="form-floating col-lg-2 col-md-4 col-sm-6 mb-3">
                            <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none" id="tel" placeholder="PhoneNumber">
                            <label class="ms-2" for="tel"> PhoneNumber</label>
                        </div>
                        <div class="form-floating col-lg-2 col-md-4 col-sm-6 mb-3">
                            <input asp-for="StartDate" type="date" class="form-control shadow-none input" id="createddate" placeholder="CreatedDate">
                            <label class="ms-2" for="createddate">CreatedDate</label>
                        </div>
                        <div class="form-floating col-lg-2 col-md-4 col-sm-6 mb-3">
                            <input asp-for="SentDate" type="date" class="form-control shadow-none input" id="sentdate" placeholder="SentDate">
                            <label class="ms-2" for="sentdate">SentDate</label>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 mb-3 d-flex mt-1 justify-content-end">
                            <a class="relogin"><button class="btn btn-info text-white shadow-none rounded-1" type="button" id="Submit">Search</button></a>
                            <a class="relogin"><button class="btn btn-outline-info bg-white shadow-none rounded-1 ms-2" id="Clear">Clear</button></a>
                        </div>
                    </div>
                </form>
                <div class="table-responsive d-none d-sm-block">
                    <table class="table table-responsive mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Recipient</th>
                                <th scope="col">Action</th>
                                <th scope="col">Role Name</th>
                                <th scope="col">Mobile Number</th>
                                <th scope="col">Create Date</th>
                                <th scope="col">Sent Date</th>
                                <th scope="col">Sent</th>
                                <th scope="col">Sent Tries</th>
                                <th scope="col">Confirmation Number</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider" id="SMSLogs">
                            @foreach (var item in Model.SMSLog)
                            {
                                <tr>
                                    <td scope="row">
                                        @item.Recipient
                                    </td>
                                    <td>@Enum.GetName(typeof(SMSAction), item.Action)</td>
                                    <td>@Enum.GetName(typeof(AccountType), item.RoleId)</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.CreatedDate.ToString("MMM d yyyy")</td>
                                    <td>@item.SentDate.ToString("MMM d yyyy")</td>
                                    <td scope="row"></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Mobile View -->
                <div class="accordion mt-3 d-block d-sm-none mx-2" id="accordionExample">
                    <div class="dBlock">
                        @foreach (var item in Model.SMSLog)
                        {
                            <div class="accordion-item btn-i">
                                <div class="accordion-header" id="flush-heading-@item.SMSLogId">
                                    <div class="p-2 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-@item.SMSLogId" aria-expanded="false" aria-controls="collapse_@item.SMSLogId">
                                        <div class="row w-100">
                                            <div class="col">
                                                <p>@item.Recipient</p>
                                                Action Name : <span class="fw-bold">@Enum.GetName(typeof(EmailAction), item.Action)</span> <br />
                                                Mobile Number : <span class="fw-bold">@item.PhoneNumber</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="flush-@item.SMSLogId" class="accordion-collapse collapse mb-3 border-top" data-bs-parent="#accordionExample">
                                    <div class="accordion-body container-fluid">
                                        <div class="mb-3">
                                            <i class="fa-solid fa-user text-info border border-info rounded-pill p-1"></i>
                                            Role Name : @Enum.GetName(typeof(AccountType), item.RoleId)
                                        </div>
                                        <div class="mb-3">
                                            <i class="fa-solid fa-calendar-days text-info border border-info rounded-pill p-1"></i>
                                            Created Date : @item.CreatedDate.ToString("MMM d, yyyy hh:mm tt")
                                        </div>
                                        <div class="mb-3">
                                            <i class="fa-solid fa-calendar-days text-info border border-info rounded-pill p-1"></i>
                                            Sent Date : @item.SentDate.ToString("MMM d, yyyy")
                                        </div>
                                        <div class="mb-3">
                                            <i class="fa-solid fa-check text-info border border-info rounded-pill p-1"></i>
                                            Sent : Yes
                                        </div>
                                        <div class="mb-3">
                                            <i class="fa-solid fa-envelope text-info border border-info rounded-pill p-1"></i>
                                            Sent Tries : @item.SentTries
                                        </div>
                                        <div class="mb-3">
                                            <i class="fa-solid fa-check text-info border border-info rounded-pill p-1"></i>
                                            Confiramtion Number : @item.ConfirmationNumber
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>
                <!-- End Mobile View -->
                <nav aria-label="Page navigation example" id="paginationSMSLogs">
                    <div class="d-flex justify-content-between mx-2 mt-3">
                        <div>
                            @if (Model.TotalPages == 0)
                            {
                                Model.CurrentPage = 0;
                            }
                            Page @Model.CurrentPage / @Model.TotalPages
                        </div>
                        <div>
                            <ul class="pagination pagination-container">
                                @{
                                    int i;
                                    <form id="paginationform" asp-controller="Records" asp-action="SMSLogs" novalidate="novalidate" class="d-flex">
                                        <input type="hidden" asp-for="PageSize" />
                                        <input type="hidden" asp-for="CurrentPage" id="currentpagevalue" />

                                        @if (@Model.CurrentPage > 1)
                                        {
                                        <li class="page-item me-2">
                                            <button class="btn shadow-none" onclick="setpagenumber('previous')">&lt;</button>
                                        </li>
                                        }
                                        else
                                        {
                                        <li class="me-2 page-item">
                                            <button class="disabled btn">&lt;</button>
                                        </li>
                                        }
                                        @for (i = 1; i <= @Model.TotalPages; i++)
                                        {
                                        <li class="page-item me-2">
                                            <button class="@(i == @Model.CurrentPage ? "activePage" : "") btn shadow-none" onclick="setpagenumber(@i)">@i</button>
                                        </li>
                                        }
                                        @if (@Model.TotalPages > @Model.CurrentPage)
                                        {
                                        <li class="page-item me-2">
                                            <button class="btn shadow-none" onclick="setpagenumber('next')">&gt;</button>
                                        </li>
                                        }
                                        else
                                        {
                                        <li class="page-item">
                                            <button class="btn disabled">&gt;</button>
                                        </li>
                                        }
                                    </form>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<script>

    modeldata = @Html.Raw(Json.Serialize(Model))

            const clear = document.getElementById("Clear");
    const submit = document.getElementById("Submit");

    clear.addEventListener("click", function () {
        const inputs = document.querySelectorAll("#FilterForm input[type='text'], #FilterForm input[type='email'], #FilterForm input[type='tel'], #FilterForm input[type='date']",);
        
        inputs.forEach(input => {
            input.value = "";
        });
        $('#Submit').click();
    });
    function clearSearchInput(event) {
        document.getElementById("accountdropdown").value = "";
    };
    $(document).ready(function () {
        $("#Submit").click(function () {
            var formData = $("#FilterForm").serialize();

            $.ajax({
                type: "POST",
                url: '@Url.Action("SMSLogs", "Records")',
                data: formData,
                cache: false,
                success: function (response) {
                    console.log(response);
                    var bodyContent = $(response).find('tbody').html();
                    var pagination = $(response).find('nav').html();
                    $('#SMSLogs').html(bodyContent);
                    $('#paginationSMSLogs').html(pagination);
                }
            });
        });
    });

    function setpagenumber(e) {
        if (e == 'previous') {
            var cp = @Model.CurrentPage-1;
            $('#currentpagevalue').val(cp);
        }
        else if (e == 'next') {
            var cp = @Model.CurrentPage + 1;
            $('#currentpagevalue').val(cp);
        }
        else {
            $('#currentpagevalue').val(e);
        }
        $("#paginationform").submit();

        console.log("Hello pagination");
    }
</script>