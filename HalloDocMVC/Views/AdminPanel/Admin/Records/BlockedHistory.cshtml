@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.RecordsModel
@using static HalloDocMVC.DBEntity.ViewModels.AdminPanel.Constant
@{
    var enumData = from Status e in Enum.GetValues(typeof(Status))
                   select new
                   {
                       ID = (int)e,
                       Name = e.ToString()
                   };

    var requestStatus = from RequestType e in Enum.GetValues(typeof(RequestType))
                        select new
                        {
                            ID = (int)e,
                            Name = e.ToString()
                        };
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-6">
            <h4><strong>Block History</strong></h4>
        </div>
    </div>
    <div class="row ">
        <div class="card shadow">
            <div class="card-body border-0">
                <form id="FilterForm">
                    <div class="row d-flex">
                        <div class="form-floating col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-3">
                            <input asp-for="FirstName" type="text" class="form-control shadow-none" id="Fname" placeholder="First Name">
                            <label class="ms-2" for="Fname"> Name</label>
                        </div>
                        <div class="form-floating col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-3">
                            <input asp-for="StartDate" type="date" class="form-control shadow-none" id="bdate" placeholder="Date">
                            <label class="ms-2" for="bdate"> Date</label>
                        </div>
                        <div class="form-floating col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-3">
                            <input asp-for="Email" type="email" class="form-control shadow-none" id="email" placeholder="Email">
                            <label class="ms-2" for="email"> Email</label>
                        </div>
                        <div class="form-floating col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-3">
                            <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none" id="PhoneNumber" placeholder="PhoneNumber">
                            <label class="ms-2" for="PhoneNumber">PhoneNumber</label>
                        </div>
                        <div class="col-lg-12 col-md-4 col-sm-6 col-xs-12 d-flex mt-1 justify-content-end">
                            <a class="relogin"><button class="btn btn-info text-white rounded-1" type="button" id="Submit">Search</button></a>
                            <a class="relogin"><button class="btn btn-outline-info bg-white rounded-1 ms-2" id="Clear">Clear</button></a>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-responsive mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Patient Name</th>
                                <th scope="col">PhoneNumber</th>
                                <th scope="col">Email</th>
                                <th scope="col">Created Date</th>
                                <th scope="col">Notes</th>
                                <th scope="col">Is Active</th>
                                <th scope="col">Action</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider" id="BlockedHistory">
                            @foreach (var item in Model.BlockedRequest)
                            {
                                <tr>
                                    <td scope="row">
                                        @item.PatientName
                                    </td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Reason</td>
                                    <td>
                                        @{
                                            var check = false;
                                            if (item.IsActive != null)
                                            {
                                                check = item.IsActive[0];
                                            }
                                            <input class="form-check-input form-check-inputs" readonly type="checkbox" onclick="return false;" value="" @(check ? "checked" : "")>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Unblock" asp-controller="Records" asp-route-RequestId="@item.RequestId" class="contactprovider shadow-none document-button mx-1 mb-2">
                                            <button class="contactprovider">
                                                Unblock
                                                @{
                                                    var box = false;
                                                    if (item.IsActive != null && box == item.IsActive[0])
                                                    {
                                                        <td>Blocked</td>
                                                    }
                                                    else
                                                    {
                                                        <td>Unblocked</td>
                                                    }
                                                }
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Page navigation example" id="paginationBlock">
                    <div class="d-flex justify-content-between mx-2 mt-3">
                        <div>
                            @if (Model.TotalPages == 0)
                            {
                                Model.CurrentPage = 0;
                            }
                            Page @Model.CurrentPage / @Model.TotalPages
                        </div>
                        <div>
                            <ul class="pagination pagination-container">
                                @{
                                    int i;
                                    <form id="paginationform" asp-controller="Records" asp-action="BlockedHistory" novalidate="novalidate" class="d-flex">
                                        <input type="hidden" asp-for="PageSize" />
                                        <input type="hidden" asp-for="CurrentPage" id="currentpagevalue" />

                                        @if (@Model.CurrentPage > 1)
                                        {
                                        <li class="page-item me-2">
                                            <button class="btn shadow-none" onclick="setpagenumber('previous')">&lt;</button>
                                        </li>
                                        }
                                        else
                                        {
                                        <li class="me-2 page-item">
                                            <button class="disabled btn">&lt;</button>
                                        </li>
                                        }
                                        @for (i = 1; i <= @Model.TotalPages; i++)
                                        {
                                        <li class="page-item me-2">
                                            <button class="@(i == @Model.CurrentPage ? "activePage" : "") btn shadow-none" onclick="setpagenumber(@i)">@i</button>
                                        </li>
                                        }
                                        @if (@Model.TotalPages > @Model.CurrentPage)
                                        {
                                        <li class="page-item me-2">
                                            <button class="btn shadow-none" onclick="setpagenumber('next')">&gt;</button>
                                        </li>
                                        }
                                        else
                                        {
                                        <li class="page-item">
                                            <button class="btn disabled">&gt;</button>
                                        </li>
                                        }
                                    </form>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<script>

    modeldata = @Html.Raw(Json.Serialize(Model))

            const clear = document.getElementById("Clear");
    const submit = document.getElementById("Submit");

    clear.addEventListener("click", function () {
        const inputs = document.querySelectorAll("#FilterForm input[type='text'], #FilterForm input[type='email'], #FilterForm input[type='tel'], #FilterForm input[type='date']",);
        inputs.forEach(input => {
            input.value = "";
        });
        $('#Submit').click();
    });

    $(document).ready(function () {
        $("#Submit").click(function () {
            var formData = $("#FilterForm").serialize();

            $.ajax({
                type: "POST",
                url: '@Url.Action("BlockedHistory", "Records")',
                data: formData,
                cache: false,
                success: function (response) {
                    console.log(response);
                    var bodyContent = $(response).find('tbody').html();
                    var pagination = $(response).find('nav').html();
                    $('#BlockedHistory').html(bodyContent);
                    $('#paginationBlock').html(pagination);
                }
            });
        });
    });

    function setpagenumber(e) {
        if (e == 'previous') {
            var cp = @Model.CurrentPage-1;
            $('#currentpagevalue').val(cp);
        }
        else if (e == 'next') {
            var cp = @Model.CurrentPage + 1;
            $('#currentpagevalue').val(cp);
        }
        else {
            $('#currentpagevalue').val(e);
        }
        $("#paginationform").submit();

        console.log("Hello pagination");
    }
</script>