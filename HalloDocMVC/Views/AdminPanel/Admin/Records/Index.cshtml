@using static HalloDocMVC.DBEntity.ViewModels.AdminPanel.Constant;
@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.RecordsModel;
@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Search Records";
}

@{
    var requestType = from RequestType e in Enum.GetValues(typeof(RequestType))
                      select new
                      {
                          ID = (int)e,
                          Name = e.ToString()
                      };
    var requestStaus = from Status e in Enum.GetValues(typeof(Status))
                       select new
                       {
                           ID = (int)e,
                           Name = e.ToString()
                       };
}

<div class="container-fluid px-4 mt-2 pb-3">
    <div class="d-flex justify-content-between my-2">
        <div class="d-flex align-self-center">
            <h4><strong>Search Records</strong></h4>
        </div>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-info text-white shadow-none">
            <i class="fa-solid fa-share-from-square"></i>
            <span class="d-none d-sm-inline">Export Data To Excel</span>
        </a>
    </div>

    <div class="bg-white rounded shadow my-3">
        <!-- Filter Inputs -->
        <form id="FilterForm">
            <div class="row p-2">
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <select asp-for="Status" asp-items="@(new SelectList(requestStaus, "ID", "Name"))" class="form-select form-control shadow-none" id="RequestStatusDropDown">
                            <option>Select Request Status</option>
                        </select>
                        <label for="RequestStatusDropDown">Select Request Status</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" type="text" class="form-control shadow-none" id="PatientName" placeholder="Enter Patient Name">
                        <label for="PatientName">Patient Name</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <select asp-for="RequestType" asp-items="@(new SelectList(requestType, "ID", "Name"))" class="form-select form-control shadow-none" id="RequestStatusTypeDropDown">
                            <option>Select Request Type</option>
                        </select>
                        <label for="RequestStatusTypeDropDown">Select Request Type</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="StartDate" type="date" class="form-control shadow-none" id="FromDateOfService" placeholder="Enter From Date Of Service">
                        <label for="FromDateOfService">From Date Of Service</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="EndDate" type="date" class="form-control shadow-none" id="ToDateOfService" placeholder="Enter To Date Of Service">
                        <label for="ToDateOfService">To Date Of Service</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="PhysicianName" type="text" class="form-control shadow-none" id="ProviderName" placeholder="Enter Provider Name">
                        <label for="ProviderName">Provider Name</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control shadow-none" id="Email" placeholder="Enter Email">
                        <label for="Email">Email</label>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none" id="PhoneNumber" placeholder="Enter Phone Number">
                        <label for="PhoneNumber">Phone Number</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end mb-2">
                <button type="button" id="Clear" class="btn border-info text-info shadow-none mx-2">Clear</button>
                <button type="button" id="Submit" class="btn btn-info text-white shadow-none me-2">Search</button>
            </div>
        </form>
        <!-- End Filter Inputs -->
        <!--List of Outcomes-->
        <div class="table-responsive d-none d-sm-block">
            <table class="table table-responsive mt-3 mb-0">
                <thead class="bg-light">
                    <tr>
                        <th scope="col">Patient Name</th>
                        <th scope="col">Requestor</th>
                        <th scope="col">Date Of Service</th>
                        <th scope="col">Close Case Date</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Address</th>
                        <th scope="col">Zip</th>
                        <th scope="col">Request Status</th>
                        <th scope="col">Physician</th>
                        <th scope="col">Physician Notes</th>
                        <th scope="col">Cancelled By Provider Note</th>
                        <th scope="col">Admin Note</th>
                        <th scope="col">Patient Note</th>
                        <th scope="col">Delete Permanently</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" id="SearchRecords">
                    @foreach (var item in Model.SearchRecords)
                    {
                        <tr>
                            <td>@item.FirstName @item.Lastname</td>
                            <td>@Enum.GetName(typeof(RequestType), item.RequestTypeId)</td>
                            <td>@item.StartDate.ToString("MMM d, yyyy")</td>
                            @if (item.EndDate != null)
                            {
                                <td>@item.EndDate</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            <td>@item.Email</td>
                            @if (item.PhoneNumber != "")
                            {
                                <td>@item.PhoneNumber</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            @if (item.Address != "")
                            {
                                <td>@item.Address</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            @if (item.ZipCode != "")
                            {
                                <td>@item.ZipCode</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            <td>@Enum.GetName(typeof(Status), item.Status)</td>
                            @if (item.PhysicianName != null)
                            {
                                <td>@item.PhysicianName</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            <td>@item.PhysicianNote</td>
                            @if (item.CancelledByProviderNotes != null)
                            {
                                <td>@item.CancelledByProviderNotes</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            @if (item.AdminNotes != null)
                            {
                                <td>@item.AdminNotes</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            @if (item.PatientNotes != null)
                            {
                                <td>@item.PatientNotes</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                            <td>
                                <form class="DeleteForm" asp-controller="Records" asp-action="DeleteRequest">
                                    <input type="hidden" name="RequestId" value="@item.RequestId" />
                                    <button type="button" class="btn btn-sm border-info text-info shadow-none mx-1 mb-2 Delete">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- End List of Outcomes-->
        <!-- Mobile View -->
        <div class="accordion d-block d-sm-none p-2" id="accordionExample">
            <div class="dBlock">
                @foreach (var item in Model.SearchRecords)
                {
                    <div class="accordion-item btn-i">
                        <div class="accordion-header" id="flush-heading-@item.RequestId">
                            <div class="p-2 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-@item.RequestId" aria-expanded="false" aria-controls="collapse_@item.RequestId">
                                <div class="row w-100">
                                    <div class="col">
                                        <p>@item.FirstName @item.Lastname</p>
                                        <p>@item.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="flush-@item.RequestId" class="accordion-collapse collapse mb-3 border-top" data-bs-parent="#accordionExample">
                            <div class="accordion-body container-fluid">
                                <div class="mb-3">
                                    <i class="fa-solid fa-calendar-days text-info border border-info rounded-pill p-1"></i>
                                    Requestor : @Enum.GetName(typeof(RequestType), item.RequestTypeId)
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-user text-info border border-info rounded-pill p-1"></i>
                                    Date Of Service : @item.StartDate.ToString("MMM d, yyyy")
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-calendar-days text-info border border-info rounded-pill p-1"></i>
                                    Case Closed Date :
                                    @if (item.EndDate != null)
                                    {
                                        <span>@item.EndDate</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-envelope text-info border border-info rounded-pill p-1"></i>
                                    Email : @item.Email
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-phone text-info border border-info rounded-pill p-1"></i>
                                    Phone :
                                    @if (item.PhoneNumber != "")
                                    {
                                        <span>@item.PhoneNumber</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-location-dot text-info border border-info rounded-pill p-1"></i>
                                    Address :
                                    @if (item.Address != "")
                                    {
                                        <span>@item.Address</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-location-dot text-info border border-info rounded-pill p-1"></i>
                                    Zipcode :
                                    @if (item.ZipCode != "")
                                    {
                                        <span>@item.ZipCode</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-check text-info border border-info rounded-pill p-1"></i>
                                    Request Status : @Enum.GetName(typeof(Status), item.Status)
                                </div>
                                <div class="mb-3">
                                    <i class="fa-solid fa-user text-info border border-info rounded-pill p-1"></i>
                                    Provider :
                                    @if (item.PhysicianName != null)
                                    {
                                        <span>@item.PhysicianName</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-regular fa-note-sticky text-info border border-info rounded-pill p-1"></i>
                                    Provider Note : @item.PhysicianNote
                                </div>
                                <div class="mb-3">
                                    <i class="fa-regular fa-note-sticky text-info border border-info rounded-pill p-1"></i>
                                    Cancelled By Provider Note :
                                    @if (item.CancelledByProviderNotes != null)
                                    {
                                        <span>@item.CancelledByProviderNotes</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-regular fa-note-sticky text-info border border-info rounded-pill p-1"></i>
                                    Admin Note :
                                    @if (item.AdminNotes != null)
                                    {
                                        <span>@item.AdminNotes</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fa-regular fa-note-sticky text-info border border-info rounded-pill p-1"></i>
                                    Cancellation Reasons : -
                                </div>
                                <div class="mb-3">
                                    <i class="fa-regular fa-note-sticky text-info border border-info rounded-pill p-1"></i>
                                    Patient Note :
                                    @if (item.PatientNotes != null)
                                    {
                                        <span>@item.PatientNotes</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <form class="DeleteForm" asp-controller="Records" asp-action="DeleteRequest">
                                        <input type="hidden" name="RequestId" value="@item.RequestId" />
                                        <button type="button" class="btn btn-outline-info btn-sm document-button shadow-none col-12 Delete">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                                <div class="mb-3">
                                    @{
                                        <a asp-controller="Actions" asp-action="ViewCase" asp-route-id="@item.RequestId" class="btn btn-outline-info btn-sm document-button shadow-none col-12">
                                            View Case
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- End Mobile View -->
        <!--Pagination-->
        <nav aria-label="Page navigation example" id="paginationSearchRecords">
            <div class="d-flex justify-content-between mx-2 mt-3">
                <div>
                    @if (Model.TotalPages == 0)
                    {
                        Model.CurrentPage = 0;
                    }
                    Page @Model.CurrentPage / @Model.TotalPages
                </div>
                <div>
                    <ul class="pagination pagination-container">
                        @{
                            int i;
                            <form id="paginationform" asp-controller="Records" asp-action="Index" novalidate="novalidate" class="d-flex">
                                <input type="hidden" asp-for="PageSize" />
                                <input type="hidden" asp-for="CurrentPage" id="currentpagevalue" />

                                @if (@Model.CurrentPage > 1)
                                {
                                <li class="page-item me-2">
                                    <button class="btn shadow-none" onclick="setpagenumber('previous')">&lt;</button>
                                </li>
                                }
                                else
                                {
                                <li class="me-2 page-item">
                                    <button class="disabled btn">&lt;</button>
                                </li>
                                }
                                @for (i = 1; i <= @Model.TotalPages; i++)
                                {
                                <li class="page-item me-2">
                                    <button class="@(i == @Model.CurrentPage ? "activePage" : "") btn shadow-none" onclick="setpagenumber(@i)">@i</button>
                                </li>
                                }
                                @if (@Model.TotalPages > @Model.CurrentPage)
                                {
                                <li class="page-item me-2">
                                    <button class="btn shadow-none" onclick="setpagenumber('next')">&gt;</button>
                                </li>
                                }
                                else
                                {
                                <li class="page-item">
                                    <button class="btn disabled">&gt;</button>
                                </li>
                                }
                            </form>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!--End Pagination-->
    </div>
</div>

<script>
    modeldata = @Html.Raw(Json.Serialize(Model))

        const clear = document.getElementById("Clear");
    const submit = document.getElementById("Submit");

    clear.addEventListener("click", function () {
        const inputs = document.querySelectorAll("#FilterForm input[type='text'], #FilterForm input[type='date'], #FilterForm input[type='email'], #FilterForm input[type='tel']",);
        inputs.forEach(input => {
            input.value = "";
        });
        $('#Submit').click();
    });

    $(document).ready(function () {
        $("#Submit").click(function () {
            var formData = $("#FilterForm").serialize();
            $.ajax({
                type: "POST",
                url: '@Url.Action("Index", "Records")',
                data: formData,
                cache: false,
                success: function (response) {
                    console.log(response);
                    var bodyContent = $(response).find('tbody').html();
                    var pagination = $(response).find('nav').html();
                    $('#SearchRecords').html(bodyContent);
                    $('#paginationSearchRecords').html(pagination);
                }
            });
        });
    });

    var deleteButton = document.querySelectorAll('.Delete');

    deleteButton.forEach(function (button) {
        button.addEventListener('click', function (event) {
            event.preventDefault();

            var form = button.closest('.DeleteForm');
            var requestIdInput = form.querySelector('input[name="RequestId"]');
            var requestId = requestIdInput.value;

            Swal.fire({
                title: "Do you want to delete this request ?",
                showDenyButton: false,
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: "No"
            }).then(function (result) {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });

    function setpagenumber(e) {
        if (e == 'previous') {
            var cp = @Model.CurrentPage-1;
            $('#currentpagevalue').val(cp);
        }
        else if (e == 'next') {
            var cp = @Model.CurrentPage + 1;
            $('#currentpagevalue').val(cp);
        }
        else {
            $('#currentpagevalue').val(e);
        }
        $("#role").val($("#roledropdown").val());
        $("#paginationform").submit();

        console.log("Hello pagination");
    }
</script>