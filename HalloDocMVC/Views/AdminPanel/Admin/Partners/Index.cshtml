@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}
@model HalloDocMVC.DBEntity.ViewModels.AdminPanel.PaginationVendor

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-6">
            <h4><strong>Vendor(s)</strong></h4>
        </div>
    </div>
    <div class="row ">
        <div class="card shadow">
            <div class="card-body border-0">
                <div class="row d-flex">
                    <div class="col-md-6 d-flex">
                        <div class="search col-md-3 col-sm-6 col-xs-12 mb-1">
                            <div>
                                <i class="fa fa-search"></i>
                                <input onkeypress="SearchInput()" id="SearchInput" type="text" class="form-control" placeholder="Search Vendors">
                            </div>
                        </div>
                        <div class="search col-md-3 col-sm-6 col-xs-12 mb-1">
                            <div class="ms-1">
                                <i class="fa fa-search"></i>
                                <select onchange="getdatabyprofession()" asp-items="@(new SelectList(ViewBag.VendorComboBox, "HealthProfessionId", "ProfessionName"))" id="professiondropdown" class="form-select shadow-none text-secondary" data-allow-clear="true" tabindex="-1">
                                    <option value="-1">All Professions</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 mr-5 d-flex">
                        <a class="ms-auto ps-5" asp-controller="Partners" asp-action="AddEditBusiness"><button class="relogin shadow-none bg-white">+ Add Business</button></a>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-responsive mt-3 mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Profession</th>
                                <th scope="col">Business Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Fax Number</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">Business Contact</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider" id="professionbody">
                            @foreach (var item in Model.VendorList)
                            {
                                <tr>
                                    <td scope="row">
                                        @item.ProfessionName
                                    </td>
                                    <td>@item.BusinessName</td>
                                    <td>@item.Email</td>
                                    <td>@item.FaxNumber</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.BusinessContact</td>
                                    <td>
                                        <form class="DeleteForm" asp-controller="Partners" asp-action="DeleteVendor">
                                            <input type="hidden" name="VendorId" value="@item.VendorId" />
                                            <button class="contactprovider shadow-none document-button mx-1 mb-2">
                                                Delete
                                            </button>
                                        </form>
                                        <a asp-action="AddEditBusiness" asp-controller="Partners" asp-route-id="@item.VendorId" class="contactprovider shadow-none document-button mx-1 mb-2">
                                            <button class="contactprovider">
                                                Edit
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Page navigation example" id="paginationVendors">
                    <div class="d-flex justify-content-between mx-2 mt-3">
                        <div>
                            @if (Model.TotalPages == 0)
                            {
                                Model.CurrentPage = 0;
                            }
                            Page @Model.CurrentPage / @Model.TotalPages
                        </div>
                        <div>
                            <ul class="pagination pagination-container">
                                @{
                                    int i;
                                    <form id="paginationform" asp-controller="Partners" asp-action="Index" novalidate="novalidate" class="d-flex">
                                        <input type="hidden" asp-for="PageSize" />
                                        <input type="hidden" asp-for="CurrentPage" id="currentpagevalue" />

                                        @if (@Model.CurrentPage > 1)
                                        {
                                        <li class="page-item me-2">
                                            <button class="btn shadow-none" onclick="setpagenumber('previous')">&lt;</button>
                                        </li>
                                        }
                                        else
                                        {
                                        <li class="me-2 page-item">
                                            <button class="disabled btn">&lt;</button>
                                        </li>
                                        }
                                        @for (i = 1; i <= @Model.TotalPages; i++)
                                        {
                                        <li class="page-item me-2">
                                            <button class="@(i == @Model.CurrentPage ? "activePage" : "") btn shadow-none" onclick="setpagenumber(@i)">@i</button>
                                        </li>
                                        }
                                        @if (@Model.TotalPages > @Model.CurrentPage)
                                        {
                                        <li class="page-item me-2">
                                            <button class="btn shadow-none" onclick="setpagenumber('next')">&gt;</button>
                                        </li>
                                        }
                                        else
                                        {
                                        <li class="page-item">
                                            <button class="btn disabled">&gt;</button>
                                        </li>
                                        }
                                    </form>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
<script>
    function getdatabyprofession() {
        var profession = $("#professiondropdown").val();
        if (profession == '-1') {
            profession = null;
            location.reload();
        }
        $.ajax({
            method: "POST",
            url: "@Url.Action("Index", "Partners")?ProfessionId=" + profession,
            cache: false,
            success: function (response) {
                var data = $(response).find('tbody').html();
                var pagination = $(response).find('nav').html();
                $('#professionbody').html(data);
                $('#paginationVendors').html(pagination);
                console.log(response);
            },
            error: function () {
                alert("Error while Loading data.");
            }
        });
    }
    $(document).ready(function () {
        $('#saveChangesButton').click(function () {
            $('#saveChangesForm').submit();
        });
        var initialState = {};
        $('.form-check-inputs').each(function () {
            initialState[this.id] = this.checked;
        });
        $('.form-check-inputs').change(function () {
            var changedValues = {};
            $('.form-check-inputs').each(function () {
                if (this.checked !== initialState[this.id]) {
                    changedValues[this.id] = this.checked;
                }
            });
            $('#changeValue').val(JSON.stringify(changedValues));
            console.log(changedValues);
            if (Object.keys(changedValues).length > 0) {
                $('#saveChangesButton').show();
            } else {
                $('#saveChangesButton').hide();
            }
        });
    });

    function SearchInput() {
        var searchInput = $("#SearchInput").val();
        var profession = $("#professiondropdown").val();
        if (profession == '-1') {
            profession = null;
        }
        $.ajax({
            type: "POST",
            url: '@Url.Action("Index", "Partners")?ProfessionId=' + profession + '&SearchInput=' + searchInput,
            cache: false,
            success: function (response) {
                console.log(response);
                var bodyContent = $(response).find('tbody').html();
                var pagination = $(response).find('nav').html();
                $('#professionbody').html(bodyContent);
                $('#paginationVendors').html(pagination);
            },
            error: function () {
                alert("Error while Loading data.");
            }
        });
    }

    function setpagenumber(e) {
        if (e == 'previous') {
            var cp = @Model.CurrentPage-1;
            $('#currentpagevalue').val(cp);
        }
        else if (e == 'next') {
            var cp = @Model.CurrentPage + 1;
            $('#currentpagevalue').val(cp);
        }
        else {
            $('#currentpagevalue').val(e);
        }
        $("#paginationform").submit();

        console.log("Hello pagination");
    }
</script>