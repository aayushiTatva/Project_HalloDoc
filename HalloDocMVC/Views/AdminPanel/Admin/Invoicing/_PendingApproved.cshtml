@{
    Layout = null;
}
@model List<HalloDocMVC.DBEntity.DataModels.Timesheet>
@if (Model.Count != 0)
{
    <h3 class="mt-3">Pending Bi-Weekly Timesheet</h3>
    <table class="table my-4">
        <thead>
            <tr class="table-secondary">
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
    // Assuming item.StartDate is a DateTime object
                string formattedDate = item.StartDate.ToString("yyyy/MM/dd");
                <tr>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>Pending</td>
                    <td>
                        <form action="~/Invoicing/Timesheet" method="post">
                            <input type="hidden" name="physicianId" value="@item.PhysicianId" />
                            <input type="hidden" name="startDate" value="@item.StartDate" />
                            <button type="submit" class="btn mx-1 btn-sm btn-outline-info view-btn">
                                Approve
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}