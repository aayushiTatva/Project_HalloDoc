@{

    Layout = "~/Views/Shared/Admin/_LayoutAdminLogin.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <img class="imgdiv mt-5 align-items-center" src="~/images/poster.jpg" />
        </div>
        <div class="col-md-6">
            <div class="row align-self-center mt-5 ms-5 ps-5">
                <div class="align-items-center ps-5 ms-5">
                    <img class=" align-items-center mt-5 ms-2" src="~/images/Patient site 1.png"><br />
                    <h2 class="ms-2">Reset your password</h2><br />
                    <form class="" asp-action="Validate" asp-controller="Login" method="post">
                        <div class="form-floating mb-3 ms-2">
                            <input type="email" class="form-control usernameLogin " id="email" name="Email" placeholder="username" style="width:380px;">
                            <i class="fa fa-user-circle userLogin"></i>
                            <label for="floatingInput">Username</label>
                        </div>
                        <button type="submit" class="logInBtnLogin">Reset Password</button>
                        <div class="forgotPasswdLogin">
                            <a id="forgotLogin" asp-controller="Login" asp-action="Index"><b>< Back to login</b></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>}
