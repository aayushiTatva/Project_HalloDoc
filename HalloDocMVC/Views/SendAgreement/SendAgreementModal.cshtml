@{
    Layout = "";
}
<div class="modal fade" id="CancelAgreement" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="exampleModalLongTitle">Cancel Confirmation</h5>
                <i class="fa-solid fa-xmark" data-bs-dismiss="modal"></i>
            </div>
            <form type="hidden" method="post" asp-controller="SendAgreement" asp-action="Reject">
                <div class="modal-body">
                    <input type="hidden" value="@TempData["RequestID"]" name="RequestId" />
                    <p class="text-secondary">@TempData["PatientName"]</p>
                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea name="Notes" class="form-control shadow-none" id="Reason" placeholder="Leave a comment here" style="height: 100px"></textarea>
                            <label for="Reason"><small>Please provide a brief explaination for your cancelation</small></label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info text-white shadow-none">Confirm</button>
                    <button type="button" class="btn border-info shadow-none" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>