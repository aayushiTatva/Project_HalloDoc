﻿@{
    string path = Context.Request.Path;
}
@using HalloDocMVC.DBEntity.ViewModels;
@using HalloDocMVC.Repositories.Admin.Repository.Interface;
@inject ILogin _ILogin;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@19.2.16/build/css/intlTelInput.css">
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/intl-tel-input@19.2.16/build/js/intlTelInput.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

</head>
<body class="">
    <header class="shadow">
        <div class="d-flex justify-content-between bg-white rounded-0 ">
            <div class="d-inline-flex">
                <a class="text-decoration-none align-self-center" id="offCanvasIcon" data-bs-toggle="offcanvas" href="#offcanvasExample">
                    <i class="fa-solid fa-bars text-info border rounded border-info my-3 p-2"></i>
                </a>
                <img id="halloDocLogo" class="img-fluid img-responsive mt-1 ms-1" src="~/images/Patient site 1.png" />
            </div>
            <div class="d-inline-flex align-items-center p-3">
                <label class="d-none d-sm-block">Welcome <strong>@CV.UserName()</strong></label>
                <a class="text-decoration-none">
                    <i class="d-block d-sm-none fa-solid fa-arrow-right-from-bracket text-info border rounded border-info mx-3 mx-xs-2 my-3 p-2"></i>
                </a>@*
                <a asp-controller="Home" asp-action="Logout"class=" btn d-none d-sm-block relogin mx-3  mx-xs-2">Logout</a>*@
                <a class="btn relogin d-none d-sm-block mx-3 shadow-none bg-white " asp-controller="Login" asp-action="Logout">Logout</a>
                <a class="btn relogin d-none d-sm-block  shadow-none bg-white " asp-controller="" asp-action=""><i class="fas fa-moon "></i></a>
                @*<a href="" class="btn relogin"><i class="fas fa-moon "></i></a>*@
            </div>
        </div>
        <partial name="../AdminPanel/Dashboard/AdminProviderSubNav" />
        <div class="offcanvas offcanvas-start w-50" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <strong class="offcanvas-title" id="offcanvasExampleLabel">Welcome, Admin</strong>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    @*<li class="nav-item mt-2 @(path.StartsWith("/") ? "activeNavItemOffcanvas" : "")">
                        <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="ProviderLocation" asp-action="Index">Provider Location</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Profile" asp-action="Index">My Profile</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Provider" asp-action="Index">Providers</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Partners" asp-action="Index">Parteners</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Access" asp-action="Index">Access</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a asp-controller="Records" asp-action="Index">Records</a>
                    </li>*@
                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "Dashboard"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index" class="nav-link px- text-dark @(path.StartsWith("/Dashboard") || path.StartsWith("/Actions") ? "activeNavItem" : "")" aria-current="page">
                                <small>Dashboard</small>
                            </a>
                        </li>
                    }
                    @if (CV.role() == "Provider")
                    {
                        @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "Invoicing"))
                        {
                            <li class="nav-item">
                                <a asp-controller="" asp-action="" class="nav-link text-dark">
                                    <small>Invoicing</small>
                                </a>
                            </li>
                        }
                        @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "MySchedule"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Scheduling" asp-action="Index" class="nav-link  text-dark">
                                    <small>My Schedule</small>
                                </a>
                            </li>
                        }
                    }
                    @if (CV.role() == "Admin")
                    {
                        @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "ProviderLocation"))
                        {
                            <li class="nav-item">
                                <a asp-controller="ProviderLocation" asp-action="Index" class="nav-link px-3 text-dark @(path.StartsWith("/ProviderLocation") ? "activeNavItem" : "")">
                                    <small>Provider Location</small>
                                </a>
                            </li>
                        }
                    }
                    @if (CV.role() == "Admin")
                    {
                        @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "MyProfile"))
                        {
                            <li class="nav-item">
                                <a asp-controller="MyProfile" asp-action="Index" class="nav-link px-3 text-dark @(path.StartsWith("/MyProfile") ? "activeNavItem" : "")">
                                    <small>My Profile</small>
                                </a>
                            </li>
                        }
                    }
                    @if (CV.role() == "Provider")
                    {
                        @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "MyProfile"))
                        {
                            var a = Int32.Parse(CV.UserID());
                            <li class="nav-item me-3">
                                <a asp-controller="Providers" asp-action="PhysicianProfile" asp-route-id="@a" class="nav-link text-dark @(path.StartsWith("/MyProfile") ? "activeNavItem" : "")">
                                    <small>My Profile</small>
                                </a>
                            </li>
                        }
                    }
                    @if (CV.role() == "Admin")
                    {
                        <li class="nav-item">
                            <div class="dropdown">
                                <button data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link px-3 text-dark btn shadow-none rounded-0 @(path.StartsWith("/Providers") || path.StartsWith("/Scheduling") ? "activeNavItem" : "")">
                                    <small>Providers</small>
                                </button>
                                <ul class="dropdown-menu">
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "Provider"))
                                    {
                                        <li>
                                            <a asp-controller="Providers" asp-action="Index" class="dropdown-item">
                                                Provider
                                            </a>
                                        </li>
                                    }
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "Scheduling"))
                                    {
                                        <li>
                                            <a asp-controller="Scheduling" asp-action="Index" class="dropdown-item">
                                                Scheduling
                                            </a>
                                        </li>
                                    }
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "Invoicing"))
                                    {
                                        <li>
                                            <a asp-controller="" asp-action="" class="dropdown-item">
                                                Invoicing
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                    }
                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "VendorsInfo"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Partners" asp-action="Index" class="nav-link px-3 text-dark @(path.StartsWith("/Partners") ? "activeNavItem" : "")">
                                <small>Partners</small>
                            </a>
                        </li>
                    }
                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "Role"))
                    {
                        <li class="nav-item">
                            <div class="dropdown">
                                <button data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn nav-link px-3 text-dark shadow-none rounded-0 @(path.StartsWith("/Access") ? "activeNavItem" : "")">
                                    <small>Access</small>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a asp-controller="Access" asp-action="Index" class="dropdown-item">
                                            Account Access
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Access" asp-action="UserAccess" class="dropdown-item">
                                            User Access
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                    @if (CV.role() == "Admin")
                    {
                        <li class="nav-item">
                            <div class="dropdown">
                                <button data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn rounded-0 nav-link px-3 text-dark shadow-none @(path.StartsWith("/Records") ? "activeNavItem" : "")">
                                    <small>Records</small>
                                </button>
                                <ul class="dropdown-menu">
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "History"))
                                    {
                                        <li>
                                            <a asp-controller="Records" asp-action="Index" class="dropdown-item">
                                                Search Records
                                            </a>
                                        </li>
                                    }
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "EmailLogs"))
                                    {
                                        <li>
                                            <a asp-controller="Records" asp-action="EmailLogs" class="dropdown-item">
                                                Email Logs
                                            </a>
                                        </li>
                                    }@if (_ILogin.IsAccessGranted((int)CV.RoleID(), "SMSLogs"))
                                    {
                                        <li>
                                            <a asp-controller="Records" asp-action="SMSLogs" class="dropdown-item">
                                                SMS Logs
                                            </a>
                                        </li>
                                    }
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "PatientRecords"))
                                    {
                                        <li>
                                            <a asp-controller="Records" asp-action="PatientHistory" class="dropdown-item">
                                                Patient Records
                                            </a>
                                        </li>
                                    }
                                    @if (_ILogin.IsAccessGranted((int)CV.RoleID(), "BlockedHistory"))
                                    {
                                        <li>
                                            <a asp-controller="Records" asp-action="BlockedHistory" class="dropdown-item">
                                                Blocked History
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>
    <div class="mb-5 bg-light">
        @RenderBody()
    </div>

    <div class="bg-dark d-flex justify-content-end p-1 text-white fixed-bottom">
        <a href="#" class="text-white text-decoration-none m-3 h6">Terms of condition</a>
        <a href="#" class="text-white text-decoration-none m-3 h6">Privacy Policy</a>
    </div>

    <script src="@Url.Content("~/plugins/mvc-jquery-ajax/jquery.unobtrusive-ajax.js")"></script>
    <script src="@Url.Content("~/plugins/mvc-jquery-validate/jquery.validate.js")"></script>
    <script src="@Url.Content("~/plugins/mvc-jquery-validate/jquery.validate.unobtrusive.js")"></script>

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
