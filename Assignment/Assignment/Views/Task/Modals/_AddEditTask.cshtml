<!-- Modal -->
@model Assignment.DBEntity.ViewModels.TaskModel
<div class="modal fade" id="AddEditTask" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-white" style="background-color:#7CA28D">
                <h5 class="modal-title" id="exampleModalLongTitle">Task Form</h5>
                <i class="fa-solid fa-xmark" data-bs-dismiss="modal"></i>
            </div>
            <form asp-controller="Task" asp-action="AddTask" method="post">
                <div class="modal-body">
                    <input type="hidden" name="taskid" id="TaskId_EditTask" value="" />
                    <div class="row">
                        <div class="col form-floating mb-3 ">
                            <input asp-for="TaskName" type="text" class="form-control shadow-none " placeholder="Task Name" id="TaskName" />
                            <label for="TaskName">Task Name</label>
                            <span asp-validation-for="TaskName" class="text-danger"></span>
                        </div>
                        <div class="col form-floating mb-3">
                            <input asp-for="Assignee" type="text" class="form-control shadow-none " placeholder="Task Name" id="Assignee" />
                            <label for="Assignee">Assignee</label>
                            <span asp-validation-for="Assignee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-floating mb-3 ">
                            <input type="text" class="form-control shadow-none " placeholder="Task Name" id="Description" asp-for="Description" />
                            <label for="Description">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col form-floating mb-3">
                            <input type="date" class="form-control shadow-none " placeholder="Task Name" id="DueDate" asp-for="DueDate" />
                            <label for="DueDate">DueDate</label>
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col form-floating mb-3 ">
                            <input type="text" class="form-control shadow-none " placeholder="Task Name" id="City" asp-for="City" />
                            <label for="City">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col form-floating mb-3">
                            <select asp-for="CategoryId" class="form-select" data-allow-clear="true" tabindex="-1" asp-items="@(new SelectList(ViewBag.CategoryComboBox,"CategoryId","CategoryName"))" >
                                <option value="">Select Category</option>
                            </select>
                            <label for="floatingSelect" class="text-info">
                                Category
                            </label>
                        </div>
                    </div>
                </div>@*
                <div class="modal-footer">
                    <a id="edit" onclick=" toggleFormElements('true')" style=" height:2.5rem;width:4rem" class="btn btn-info text-white rounded ">Edit</a>
                    <input type="submit" value="Save" id="save" style=" height:2.5rem;width:4rem" class="btn btn-info text-white rounded">
                </div>*@
                <div class="modal-footer">
                    <button type="submit" class="btn border-none text-white shadow-none rounded-0" style="background-color:#7CA28D">Save</button>
                    <button type="button" class="btn border border-info text-info rounded-0 shadow-none" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


